<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="view_product_uom_tree4" model="ir.ui.view">
        <field name="name">view.product.uom.tree4</field>
        <field name="model">product.uom.ept4</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="uom_category_id"/>
            </tree>
        </field>
    </record>

    <record id="view_product_uom_form4" model="ir.ui.view">
        <field name="name">view.product.uom.form4</field>
        <field name="model">product.uom.ept4</field>
        <field name="arch" type="xml">
            <form string="ProductUomFormView">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="uom_category_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="search_product_uom4" model="ir.ui.view">
        <field name="name">search.product.uom4</field>
        <field name="model">product.uom.ept4</field>
        <field name="arch" type="xml">
            <search string="ProductUomSearchView">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_view_product_uom4" model="ir.actions.act_window">
        <field name="name">Product UOM</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.uom.ept4</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Please enter some data</p>
        </field>
    </record>

</odoo>
